<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.demo.model.Product" table="product">
		<meta attribute="class-description">
			This class contains the product detail.
		</meta>
		<id name="productId" type="int" column="idProduct">
			<generator class="increment"></generator>
		</id>
		<property name="productName" column="nameProduct" type="string"></property>
		<property name="productDescption" column="descProduct" type="string"></property>
		<property name="productPrice" column="pPrice" type="double"></property>

